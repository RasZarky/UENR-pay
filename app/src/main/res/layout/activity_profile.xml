<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/for_profile_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="100dp"
        app:cardCornerRadius="150dp"
        android:elevation="@dimen/cardview_default_elevation"
        android:layout_width="150dp"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:layout_height="match_parent"
            android:cropToPadding="true"
            android:src="@drawable/img3"/>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/pick_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="200dp"
            android:background="#FFFFFF"
            app:cardCornerRadius="30dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edit"/>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/design_default_color_primary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.DayNight"
            app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight"
            app:title="@string/app_name">
        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/for_profile_pic"
        android:background="@drawable/green_mcurve_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Information"
        android:textAlignment="center"
        android:textSize="30sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#050D3A"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textStyle="bold"
            android:textColor="#050D3A"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student No."
            android:textStyle="bold"
            android:textColor="#050D3A"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="120dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exam No."
            android:textStyle="bold"
            android:textColor="#050D3A"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="160dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session"
            android:textStyle="bold"
            android:textColor="#050D3A"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="200dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School"
            android:textStyle="bold"
            android:textColor="#050D3A"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="240dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textStyle="bold"
            android:textColor="#050D3A"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="280dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programme"
            android:textStyle="bold"
            android:textColor="#050D3A"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="320dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entry Year"
            android:textStyle="bold"
            android:textColor="#050D3A"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_marginTop="360dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Abdul Razak Abubakari"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="150dp"
            android:textSize="20sp"
            android:layout_marginTop="80dp"/>

        <TextView
            android:id="@+id/student_number"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="1909000000"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="150dp"
            android:textSize="20sp"
            android:layout_marginTop="120dp"/>

        <TextView
            android:id="@+id/index"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="UED2900419"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="150dp"
            android:textSize="20sp"
            android:layout_marginTop="160dp"/>

        <TextView
            android:id="@+id/session"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="2020/2021"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="150dp"
            android:textSize="20sp"
            android:layout_marginTop="200dp"/>

        <TextView
            android:id="@+id/school"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sciences"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="150dp"
            android:textSize="20sp"
            android:layout_marginTop="240dp"/>

        <TextView
            android:id="@+id/department"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Comp. Science &amp; Infomatics"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="150dp"
            android:textSize="20sp"
            android:layout_marginTop="280dp"/>

        <TextView
            android:id="@+id/Programme"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Dip. Computer Science"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="150dp"
            android:textSize="20sp"
            android:layout_marginTop="320dp"/>

        <TextView
            android:id="@+id/entry_year"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="2019/2020"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="150dp"
            android:textSize="20sp"
            android:layout_marginTop="360dp"/>
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:background="#050D3A"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All right reserved   |   2021"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help and support center"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>


    </RelativeLayout>
</ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>